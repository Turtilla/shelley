<individual name="monday_schedule" sort="question_answer"/>
<individual name="other_schedule" sort="question_answer"/>
<individual name="help_msg" sort="question_answer"/>
<individual name="when_to_feed" sort="question_answer"/>

<!--individual name="greetings_msg" sort="question_answer"/-->

